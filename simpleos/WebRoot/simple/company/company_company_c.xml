<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.simpleframework.net/xsd/default/simple.xsd">
	<scriptEval>single</scriptEval>
	<handleClass>net.prj.manager.company.PrjCompanyPageLoad</handleClass>
	<handleMethod>companyLoad</handleMethod>
	<jobView>sys_manager</jobView>
	<components>
		<htmlEditor name="company_content" textarea="company_content"
			toolbar="News" height="160">
			<jsLoadedCallback>
				$("company_content").innerHTML = "";
			</jsLoadedCallback>
		</htmlEditor>
		<ajaxRequest name="company_companyAct"
			handleClass="net.prj.manager.company.PrjCompanyAction" selector="#company_company_form"
			handleMethod="saveCompany">
			<jsCompleteCallback>
				<![CDATA[
					$IT.alert('#(Save.OK)');
				]]>
			</jsCompleteCallback>
		</ajaxRequest>
	</components>
</page>